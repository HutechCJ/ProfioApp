<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Assets\Img\header.jpg" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Spark.Library" Version="0.9.0" />
    <PackageReference Include="Vite.AspNetCore" Version="1.10.0" />
  </ItemGroup>

  <ItemGroup>
	<Folder Include="Storage\Logging\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\images\about.jpg" />
    <None Include="wwwroot\images\blog-1.jpg" />
    <None Include="wwwroot\images\blog-2.jpg" />
    <None Include="wwwroot\images\feature.jpg" />
    <None Include="wwwroot\images\team-1.jpg" />
    <None Include="wwwroot\images\team-2.jpg" />
    <None Include="wwwroot\images\team-3.jpg" />
    <None Include="wwwroot\images\team-4.jpg" />
    <None Include="wwwroot\images\testimonial-1.jpg" />
    <None Include="wwwroot\images\testimonial-2.jpg" />
    <None Include="wwwroot\images\testimonial-3.jpg" />
    <None Include="wwwroot\images\testimonial-4.jpg" />
    <None Include="wwwroot\images\user.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\images\logo.png">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <Target Name="DebugEnsureNodeEnv" BeforeTargets="Build;PublishBuildAssets" Condition=" !Exists('node_modules') ">
    <Exec Command="node --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="Node.js is required to build and run this project. To continue, please install Node.js from https://nodejs.org/, and then restart your command prompt or IDE." />
    <Message Importance="high" Text="Restoring dependencies using 'npm'. This may take several minutes..." />
    <Exec Command="npm install" />
  </Target>

  <Target Name="PublishBuildAssets" BeforeTargets="Build" Condition=" '$(Configuration)' == 'Release' ">
    <Exec Command="npm run build" />
  </Target>

</Project>
