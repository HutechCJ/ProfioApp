@page "/order/{PhoneNumber}"
@using MudBlazor
@using Profio.Website.Data.Orders

<PageTitle>Order</PageTitle>

@if (!Valid)
{
  <div class="jumbotron jumbotron-fluid mb-5">
    <div class="container text-center py-5">
      <h1 class="text-white display-3">Invalid</h1>
      <div class="d-inline-flex align-items-center text-white">
        <p class="m-0">
          <a class="text-white" href="/">Home</a>
        </p>
        <i class="fa fa-circle px-3"></i>
        <p class="m-0">Invalid Information</p>
      </div>
    </div>
  </div>
  <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container text-center py-5">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <i class="bi bi-exclamation-triangle display-1 text-danger"></i>
          <h1 class="display-1">Oops</h1>
          <h1 class="mb-4">Invalid Information</h1>
          <p class="mb-4">
            Weâ€™re sorry, is your phone number correct? Please check again!
          </p>
          <a class="btn btn-primary rounded-pill py-3 px-5" href="/">Go Back To Home</a>
        </div>
      </div>
    </div>
  </div>
}

<MudDataGrid Items="@Orders"
             Loading="@IsLoading"
             LoadingProgressColor="Color.Info"
             SortMode="SortMode.Multiple"
             ReadOnly="true"
             Hover="true"
             Striped="true"
             Bordered="true">
  <Columns>
    <PropertyColumn Property="x => x.Id" Title="Id"/>
    <PropertyColumn Property="x => x.StartedDate" Title="Started Date"/>
    <PropertyColumn Property="x => x.ExpectedDeliveryTime" Title="ExpectedDelivery Time"/>
    <PropertyColumn Property="x => x.Status" Title="Status"/>
    <PropertyColumn Property="x => x.Address" Title="Address" />
  </Columns>
</MudDataGrid>
